<div class="container">
  <br>
  <form class="form-horizontal" action="/users/new" method="POST">
  <fieldset>
  <!-- Form Name -->
  <legend class="form-group">New User Registration</legend>
  <% if @errors %>
    <div class="errors-wrapper">
      <span>Login failed:</span>
      <ul class="errors">
        <% @errors.each do |error| %>
          <li class="error"><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- Text input-->
  <div class="form-group">
    <label class="col-md-4 control-label" for="username">Username</label>
    <div class="col-md-4">
    <input id="username" name="username" type="text" value="<%= @user.try(:username) %>" class="form-control input-md" required="">
    </div>
  </div>
  <br>
  <!-- Text input-->
  <div class="form-group">
    <label class="col-md-4 control-label" for="email">Email Address</label>
    <div class="col-md-4">
    <input id="email" name="email" type="email" placeholder="example@gmail.com" value="<%= @user.try(:email) %>" class="form-control input-md" required="">
    </div>
  </div>
  <br>
  <!-- Password input-->
  <div class="form-group">
    <label class="col-md-4 control-label" for="password_plaintext">Password</label>
    <div class="col-md-4">
      <input id="password_plaintext" name="password_plaintext" placeholder="*******" type="password" class="form-control input-md" required="">
    </div>
  </div>
  <br>
  <!-- Button -->
  <div class="form-group">
    <label class="col-md-4 control-label" for="register"></label>
    <div class="col-md-4">
      <button id="register" name="register" class="btn btn-primary">Register</button>
    </div>
  </div>
  </fieldset>
  </form>
</div>
